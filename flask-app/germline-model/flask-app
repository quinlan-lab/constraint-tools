#!/usr/bin/env bash

# set -o xtrace 

model="${CONSTRAINT_TOOLS}/$(read-config browserGermlineModel model)"
region=$(read-config browserGermlineModel region)
window_stride=$(read-config browserGermlineModel windowStride)

# https://devhints.io/bash#miscellaneous
# put option-fetching before "set -o nounset" so that we can detect flags without arguments
while [[ "$1" =~ ^- ]]; do 
  case $1 in
    --model ) shift; [[ ! $1 =~ ^- ]] && model=$1;;
    --port ) shift; [[ ! $1 =~ ^- ]] && port=$1;;
    *) error "$0: $1 is an invalid flag"; exit 1;;
  esac 
  shift
done

set -o errexit
set -o pipefail
set -o noclobber
set -o nounset

info "Using the model specified at:" ${model}

cd ${CONSTRAINT_TOOLS}/flask-app/germline-model
FLASK_ENV="development" # https://flask.palletsprojects.com/en/2.0.x/server/#in-code
python flask-app.py \
  --model ${model} \
  --port ${port} \
  --region ${region} \
  --window-stride ${window_stride} 


